<body>
  <div class="container">
    <div style="position:fixed; right: 70px; bottom:70px;">
      <br>
      <button type="button" class="btn btn-default" onclick="location.href='https://sch0906-toomy0toons-2.c9.io/question/new'">
        <h4><span class="glyphicon glyphicon-pencil" aria-hidden="true">질문작성하기</span></h4>
      </button>
    </div>
    <br>
    <br>
    <br>
    
    <% @questions.each do |i| %>
    <div class="container">
      <table class="type05">
        <br>
          <tr>
              <th scope="row">제목</th>
              <td><%=i.title%></td>
          </tr>
          <tr>
              <th scope="row">글쓴이</th>
              <td><%=i.writer%></td>
          </tr>
          <tr>
              <th scope="row">첨부 이미지</th>
              <td><img src="<%=i.image.url%>" width="500px"></td>
          </tr>
          <tr>
              <th scope="row">설명</th>
              <td><%=i.description%></td>
          </tr>
          <tr>
              <th scope="row">태그</th>
              <td><%=i.tag%></td>
          </tr>
          </tr>
           <td><button type="submit" onclick="location.href='https://sch0906-toomy0toons-2.c9.io/question/modify/<%=i.id%>'">수정</button></td>
           <td><button type="submit" onclick="location.href='https://sch0906-toomy0toons-2.c9.io/question/delete/<%=i.id%>'">삭제</button></td>
          </tr>
        <br>
      </table>
    </div>
    <% end %>
    <br>
    <hr>
    <%= render "/home/footer" %>
  </div>
</body>
