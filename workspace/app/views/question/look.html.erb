        </ul>
      </div>
    </div>
  </nav>
    
  <div class="container">
    <div style="position:fixed; right: 70px; bottom:70px;">
      <br>
      <button type="button" class="btn btn-default" onclick="location.href='https://sch0916-seongwook-hong-1.c9.io/question/write' ">
        <h3><span class="glyphicon glyphicon-pencil" aria-hidden="true">질문작성하기</span></h3>
      </button>
    </div>
    <br>
    <br>
    <br>
    
    <% @questions.each do |i| %>
    <div class="container">
      <table class="type05">
        <br>
          <tr>
              <th scope="row">제목</th>
              <td><%=i.title%></td>
          </tr>
          <tr>
              <th scope="row">글쓴이</th>
              <td><%=i.writer%></td>
          </tr>
          <tr>
              <th scope="row">첨부 이미지</th>
              <td><img src="<%=i.image.url%>" width="500px"></td>
          </tr>
          <tr>
              <th scope="row">설명</th>
              <td><%=i.description%></td>
          </tr>
          <tr>
              <th scope="row">태그</th>
              <td><%=i.tag%></td>
          </tr>
        <br>
      </table>
    </div>
    <% end %>
    <br>
    <hr>
    <footer>
      <p>&copy; Bori-corporation</p>
    </footer>
  </div>
  
  <!-- Modal -->
  <div id="login" class="modal fade" role="dialog">
    <div class="modal-dialog">
  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">로그인</h4>
        </div>
        
        <div class="modal-body">
          <form role="form">
            <div class="form-group">
              <label for="email">Email address:</label>
              <input type="email" class="form-control" id="email">
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" class="form-control" id="pwd">
            </div>
            <div class="checkbox">
              <label><input type="checkbox"> Remember me</label>
            </div>
            <button type="submit" class="btn btn-default">로그인</button>
          </form>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
        </div>
      </div>
  
    </div>
  </div>
  
</body>
